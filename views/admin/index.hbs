			<div class="tab-content col-md-8"> 
				    <div id="ThongTinTaiKhoan" class="tab-pane fade">
					 <div class="col-md-6">
					 	<h3 style="color: #00bfff;">Thêm sản phẩm</h3>
					 	<form>
						    <div class="form-group">
						      <label for="usr">Tên sản phẩm:</label>
						      <input type="text" class="form-control" id="usr" placeholder="Nhập tên sản phẩm">
						    </div>
						    <div class="form-group">
						      <label for="pwd">Loại sản phẩm:</label>
						      <input type="text" class="form-control" id="pwd" placeholder="Nhập loại sản phẩm">
						    </div>
						    <div class="form-group">
						      <label for="pwd">Nhà sản xuất:</label>
						      <input type="text" class="form-control" id="pwd" placeholder="Nhập nhà sản xuất">
						    </div>
						    <div class="form-group">
						      <button type="button" class="btn btn-success btn-block">Thêm sản phẩm</button>
						    </div>
						  </form>
					 </div>
					 	
					 <div class="col-md-6">
					 <h3 style="color: #00bfff;">Xóa sản phẩm</h3>
					    <form>
						    <div class="form-group">
						      <label for="usr">Xóa theo tên:</label>
						      <input type="text" class="form-control" id="usr" placeholder="Tên sản phẩm muốn xóa">
						    </div>
						    <div class="form-group">
						      <button type="button" class="btn btn-warning btn-block">Xóa sản phẩm</button>
						    </div>
				        </form>
					</div>

					</div>

				    <div id="QuanLySanPham" class="tab-pane fade">
				      <table class="table">
					    <thead>
					      <tr>
					        <th>Sản Phẩm</th>
					        <th>Loại Sản Phẩm</th>
					        <th>Nhà Sản Xuất</th>
					      </tr>
					    </thead>
					    <tbody>
					    	{{#each data.products}}
						       <tr>
						       	<td>
						       		{{this.name}}
						       	</td>
						       	<td>
						       		{{this.category}}
						       	</td>
						       	<td>
						       		{{this.maker}}
						       	</td>
						       </tr>
						      
						    {{/each}}

					    </tbody>
					  </table>
				    </div>

				    <div id="QuanLiDonHang" class="tab-pane fade">
				      <table class="table">
					    <thead>
					      <tr>
					        <th>Mã đơn hàng</th>
					        <th>Ngày mua</th>
					        <th>Sản phẩm</th>
					        <th>Tổng tiền</th>
					        <th>Trạng thái đơn hàng</th>
					      </tr>
					    </thead>

					    <tbody >
							 {{#each data.orders}}
								<tr class="{{this.status_TT}}">
									<td>
									{{this.id}}
									</td>
									<td>
										{{this.order_datetime}}
									</td>
									<td>
										{{this.receiver_name}}
									</td>
									<td>
										{{this.cost}}
									</td>
									<td>
										{{this.status_name}}
									</td>
								</tr>
							{{/each}}
								
