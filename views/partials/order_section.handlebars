<div class="row">
    <div class="col-sm-5">
        <div class="form-group">
            <label for="buyer-name" class="order-header">Người đặt</label>
            <input id="buyer-name" class="form-control-plaintext" type="text" value="{{info.receiver_name}}" readonly>
        </div>
        <div class="form-group">
            <label for="buyer-name" class="order-header">Người nhận</label>
            <input id="buyer-name" class="form-control-plaintext" type="text" name="receiver_name" value="{{info.receiver_name}}" required>
        </div>
        <div class="form-group">
            <label for="buyer-name" class="order-header">SĐT Người nhận</label>
            <input id="buyer-name" class="form-control-plaintext" type="text" name="receiver_phone" value="{{info.receiver_phone}}" required>
        </div>
        <div class="form-group">
            <label for="buyer-name" class="order-header">Email Người nhận</label>
            <input id="buyer-name" class="form-control-plaintext" type="text" name="receiver_email" value="{{info.receiver_email}}" required>
        </div>
        <div class="form-group">
            <label for="buyer-name" class="order-header">Địa chỉ nhận hàng</label>
            <input id="buyer-name" class="form-control-plaintext" type="text" name="receiver_address" value="{{info.receiver_address}}" required>
        </div>
    </div>
    <div class="col-sm-7">
        <div class="form-group">
            <table class="table table-order">
                <thead class="header">
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Giá x Số lượng</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each info.items}}
                    <tr>
                        <td class="item-image"><a href="/product/{{this.product_id}}"><img src="{{this.images}}"></a></td>
                        <td>{{this.name}}</td>
                        <td>{{this.number}}</td>
                        <td>{{money this.price}}</td>
                        <td>{{money this.totalPrice}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <label  class="order-header">Tổng tiền</label>
            <input type="text" class="form-control-plaintext" value="{{money info.cost}}">
        </div>
    </div>
</div>