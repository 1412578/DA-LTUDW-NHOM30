<div class="col-sm-12">
	<div class="row">
		<div class="col">
			<div class="section-title">
				<h3>SẢN PHẨM</h3><span class="badge badge-warning">MỚI</span>
			</div>
			<hr class="mt-0">
			<div id="badge-ribbon"></div>
			<div class="row">
				{{#each items.newest}}
				<div class="col-2m4">
					{{> product this}}
				</div>
				{{#if_eq @index 4}}
				<div class="w-100"></div>
				{{/if_eq}}
				{{/each}}
			</div>
		</div>
	</div>

	<div class="row mt-5">
		<div class="col">
			<div class="section-title">
				<h3>SẢN PHẨM</h3><span class="badge badge-primary">BÁN CHẠY</span>
			</div>
			<hr class="mt-0">
			<div id="badge-ribbon"></div>
			<div class="row">
				{{#each items.mostSold}}
				<div class="col-2m4">
					{{> product this}}
				</div>
				{{#if_eq @index 4}}
				<div class="w-100"></div>
				{{/if_eq}}
				{{/each}}
			</div>
		</div>
	</div>

	<div class="row mt-5">
		<div class="col">
			<div class="section-title">
				<h3>SẢN PHẨM</h3><span class="badge badge-success">XEM NHIỀU</span>
			</div>
			<hr class="mt-0">
			<div id="badge-ribbon"></div>
			<div class="row">
				{{#each items.mostView}}
				<div class="col-2m4">
					{{> product this}}
				</div>
				{{#if_eq @index 4}}
				<div class="w-100"></div>
				{{/if_eq}}
				{{/each}}
			</div>
		</div>
	</div>
</div>
